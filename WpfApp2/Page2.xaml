<UserControl x:Class="WpfApp2.Page2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WpfApp2">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <!-- 파일 리스트 -->
            <ColumnDefinition Width="*"/>
            <!-- 이미지 + 오버레이 -->
        </Grid.ColumnDefinitions>

        <!-- 파일 목록 -->
        <DockPanel Grid.Column="0" Margin="5">
            <Button Content="JPG → 8-bit Gray (BMP)" DockPanel.Dock="Top"
                    Margin="0,0,0,8" Click="BtnConvertGray_Click"/>
            <ListBox x:Name="FileList" SelectionChanged="FileList_SelectionChanged"/>
        </DockPanel>

        <!-- 이미지 + 오버레이 -->
        <Grid Grid.Column="1" Background="Black">
            <Image x:Name="PlayImage" Stretch="None"
                   MouseMove="PlayImage_MouseMove"
                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <local:DrawingVisualHost x:Name="OverlayHost" IsHitTestVisible="False"/>
        </Grid>
    </Grid>
</UserControl>
