<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Page Navigation Sample" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="9*"/>
            <!-- 왼쪽: 페이지 영역 -->
            <ColumnDefinition Width="1*"/>
            <!-- 오른쪽: 버튼 영역 -->
        </Grid.ColumnDefinitions>

        <!-- 페이지가 표시될 영역 -->
        <ContentControl x:Name="ContentArea" Grid.Column="0" />

        <!-- 버튼 5개 -->
        <StackPanel Grid.Column="1" Orientation="Vertical"
                    VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="Page 1" Margin="0,5" Click="BtnPage1_Click"/>
            <Button Content="Page 2" Margin="0,5" Click="BtnPage2_Click"/>
            <Button Content="Page 3" Margin="0,5" Click="BtnPage3_Click"/>
            <Button Content="Page 4" Margin="0,5" Click="BtnPage4_Click"/>
            <Button Content="Page 5" Margin="0,5" Click="BtnPage5_Click"/>
        </StackPanel>
    </Grid>
</Window>
